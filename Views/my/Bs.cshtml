	<button type="button" class="btn btn-primary" onclick="window.location.href='https://www.facebook.com/'">Facebook</button>

	<!-- Indicates a successful or positive action -->
	<button type="button" class="btn btn-success" onclick="window.location.href='https://www.nutc.edu.tw/bin/home.php'">NUTC</button>
	
	<!-- Contextual button for informational alert messages -->
	<button type="button" class="btn btn-info" onclick="window.location.href='https://www.google.com.tw/?hl=zh_TW'">Google</button>

	<!-- Indicates caution should be taken with this action -->
	<button type="button" class="btn btn-warning" onclick="window.location.href='https://www.instagram.com/'">Instagram</button>

	<!-- Indicates a dangerous or potentially negative action -->
	<button type="button" class="btn btn-danger" onclick="window.location.href='https://www.ted.com/talks?language=zh-tw'">Ted</button>

